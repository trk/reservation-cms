<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>room</key>

    <view>pages/room</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title lang="en">Room</title>
        <title lang="pl">Pokój</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="pl">Tytuł</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="pl">Adres</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="shortText" type="text_line">
            <meta>
                <title lang="en">Short Text</title>
                <title lang="pl">Zajawka</title>
            </meta>
        </property>

        <property name="widgetHeader" type="text_line">
            <meta>
                <title lang="en">Widget header</title>
                <title lang="pl">Nagłówek widgetu</title>
            </meta>
        </property>

        <property name="content" type="text_editor">
            <meta>
                <title lang="en">Content</title>
                <title lang="pl">Tekst strony</title>
            </meta>
        </property>

        <property name="images" type="media_selection">
            <meta>
                <title lang="en">Images</title>
                <title lang="pl">Obrazy</title>
            </meta>
        </property>
    </properties>
</template>
