<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>room_details</key>

    <properties>

        <property name="name" type="text_line" mandatory="true" colspan="3">
            <meta>
                <title>app.name</title>
            </meta>
        </property>

        <property name="maxGuests" type="number" mandatory="true" colspan="2">
            <meta>
                <title>app.max_guests</title>
            </meta>
        </property>

        <property name="basePrice" type="number" mandatory="true" colspan="2">
            <meta>
                <title>app.basePrice</title>
            </meta>
        </property>

        <property name="stepsAmount" type="number" mandatory="true" colspan="2">
            <meta>
                <title>app.stepsAmount</title>
            </meta>
        </property>

        <property name="stepsDiscount" type="number" mandatory="true" colspan="2">
            <meta>
                <title>app.stepsDiscount</title>
            </meta>
        </property>

        <property name="widgetHeader" type="text_line" mandatory="true" colspan="8">
            <meta>
                <title>app.widgetHeader</title>
            </meta>
        </property>

        <property name="widgetText" type="text_area">
            <meta>
                <title>app.widgetText</title>
            </meta>
        </property>

        <property name="content" type="text_editor">
            <meta>
                <title>app.content</title>
            </meta>
        </property>

    </properties>
</form>
