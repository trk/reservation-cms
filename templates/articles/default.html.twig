{% extends "base.html.twig" %}

{% block content %}
    <div class="res-hero">
        <div class="res-overlay"></div>
        <div class="res-cover" data-stellar-background-ratio="0.5" style="background-image: url(web/images/cover-bg-min.webp);">
            <div class="desc">
                <div class="container">
                    <div class="row">

                        <div class="desc2">
                            <div class="col-sm-7 col-sm-push-1 col-md-7 col-md-push-1 text-header-article">
                                <h1>{{ content.title }}</h1>
                                {{ content.preview|default()|raw }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="res-section-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center text-article">
                    <p>{{ content.article|default()|raw }}</p>
                </div>
            </div>
            {% include "articles/recentArticles.html.twig" %}
        </div>
    </div>
{% endblock %}
