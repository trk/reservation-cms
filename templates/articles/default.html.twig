{% extends "base.html.twig" %}

{% block content %}
    <div class="res-hero">
        <div class="res-overlay"></div>
        {% if content.images[0] is defined %}
            <div class="res-cover" data-stellar-background-ratio="0.5" style="background-image: url({{ content.images[0].formats['1200x.webp'] }});">
        {% else %}
            <div class="res-cover" data-stellar-background-ratio="0.5" style="background-image: url(/web/images/cover-bg-2.jpg);">
        {% endif %}
            <div class="article-desc">
                <div class="container">
                    <div class="row">
                        <div class="desc2">
                            <div class="col-sm-8 col-md-7 text-header-article">
                                <h1>{{ content.title }}</h1>
                                {{ content.preview|default()|raw }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="res-section-gray">
        <div class="container pb-2 text-article">
            <div class="row">
            <div class="taxonomy col-md-9 col-sm-12 ">
                    <p>{{ content.article|default()|raw }}</p>
                    {% if content.blocks is defined %}
                        {% for key, block in content.blocks %}
                            {% if block.image.formats is defined %}
                                <img loading="lazy" class="img-responsive image-center text-center" src="{{ block.image.formats['600x.webp'] }}" alt="{{ content.title }} {{ key }}">
                            {% else %}
                                <p>{{ block.text|default()|raw }}</p>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            {% include "pages/taxonomy/sidebar.html.twig" %}
            </div>
        </div>
        <div class="container no-padding"
        {% include "articles/recentArticles.html.twig" %}
        </div>
    </div>
{% endblock %}
