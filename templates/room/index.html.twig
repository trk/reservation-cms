{% extends 'base.html.twig' %}

{% block styles %}
    {{ encore_entry_link_tags('card', null, 'css') }}
{% endblock %}

{% block title %}{{ room.name }}{% endblock %}

{% block body %}
    <div class="res-section-gray">
        <div class="container">
            {% if rooms is defined %}
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 text-center heading-section pt-1">
                        <h1>Znaleziono wolne miejsce</h1>
                    </div>
                </div>
                {% for room in rooms %}
                    <div class="card">
                        <div class="card-container">
                            {% if media[room.id].media[0]is defined %}
                                <div class="image" style="background-image: url({{ media[room.id].media[0].media.formats['sulu-400x400-inset.webp'] }});"></div>
                            {% else %}
                                <div class="image" style="background-image: url(/web/images/place-1.jpg);"></div>
                            {% endif %}
                            <div class="text-card-container">
                                <h2>{{ room.name }}</h2>
                                <p>Get the lastest and trending web development project's source code, first see preview
                                    if you need then get the code. {{ room.maxGuests }}
                                </p>
                                <div class="col-xs">
                                    <button type="submit"
                                            onclick="location.href='{{ path('room_show_dates', {id: room.id, checkIn: checkIn, checkOut: checkOut, guests: guests}) }}';"
                                            class="btn btn-primary btn-block">Zarezerwuj pok√≥j
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center heading-section pt-1">
                            <h1>Brak wolnych miejsc</h1>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}
