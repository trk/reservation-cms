{% extends 'base.html.twig' %}

{% block styles %}
    {{ encore_entry_link_tags('card', null, 'css') }}
{% endblock %}

{% block title %}Sprawdź dostęność pokoi - pokojebeata.pl{% endblock %}

{% block body %}
    <div class="res-section-gray">
        <div class="container">
            {% if rooms is defined and rooms is not empty %}
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 text-center heading-section pt-1">
                        <h1>Znaleziono wolne miejsce</h1>
                    </div>
                </div>
                {% for room in rooms %}
                    <div class="card">
                        <div class="card-container">
                            {% if media[room.id].media[0]is defined %}
                                <div class="image" style="background-image: url({{ media[room.id].media[0].media.formats['sulu-400x400-inset.webp'] }});"></div>
                            {% else %}
                                <div class="image" style="background-image: url(/web/images/place-1.jpg);"></div>
                            {% endif %}
                            <div class="text-card-container">
                                <div class="card-description-container">
                                    <h2>{{ room.name }}</h2>
                                    <p>
                                        <svg width="20" height="20" viewBox="0 0 16 16" class="bi bi-check2-circle icon pr-1" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L8 9.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                                            <path fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1 0 13.5 8a.5.5 0 0 1 1 0 6.5 6.5 0 1 1-3.25-5.63.5.5 0 1 1-.5.865A5.472 5.472 0 0 0 8 2.5z"/>
                                        </svg> Wi-fi, TV<br/>
                                        <svg width="20" height="20" viewBox="0 0 16 16" class="bi bi-people icon pr-1" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8zm-7.978-1h7.956a.274.274 0 0 0 .014-.002l.008-.002c-.002-.264-.167-1.03-.76-1.72C13.688 10.629 12.718 10 11 10c-1.717 0-2.687.63-3.24 1.276-.593.69-.759 1.457-.76 1.72a1.05 1.05 0 0 0 .022.004zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816zM4.92 10c-1.668.02-2.615.64-3.16 1.276C1.163 11.97 1 12.739 1 13h3c0-1.045.323-2.086.92-3zM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4z"/>
                                        </svg> Łazienka w pokoju
                                    </p>
                                </div>
                                <hr/>
                                <div class="text-card-container-right">
                                    <div class="col-xs">
                                        <p>
                                            Od<br/>
                                            <span class="price">{{ room.basePrice }}zł / noc</span>
                                        </p>
                                        <button type="submit"
                                                onclick="location.href='{{ path('room_show_dates', {slug: room.slug, checkIn: checkIn, checkOut: checkOut, guests: guests}) }}';"
                                                class="btn btn-primary btn-block">Dalej
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 text-center heading-section pt-1">
                        <h1>Brak wolnych miejsc</h1>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}
