<div class="container">
    <div class="row">
        <div class="col-sm-5 col-md-5 res-form">
            <div class="tabulation">
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="hotels">
                        <div class="row">
                            <div class="col-xxs-12 col-xs-12 mt">
                                <div class="input-field">
                                    <span class="h4 theme-orange">{{ formHeader }}</span>
                                </div>
                            </div>
                            {{ form_start(form, {attr: {class: 'submit-form'} }) }}
                            {{ form_errors(form) }}
                            <div class="col-xxs-12 col-xs-6 mt">
                                <div class="input-field">
                                    {{ form_label(form.checkInDate, 'Zameldowanie') }}
                                    {{ form_errors(form.checkInDate) }}
                                    {{ form_widget(form.checkInDate) }}
                                    <i class="icon">
                                        <svg width="20" height="20" viewBox="0 0 16 16" class="bi bi-calendar3-range icon-calendar" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"/>
                                            <path fill-rule="evenodd" d="M7 10a1 1 0 0 0 0-2H1v2h6zm2-3a1 1 0 0 1 0-2h6v2H9z"/>
                                        </svg>
                                    </i>
                                </div>
                            </div>
                            <div class="col-xxs-12 col-xs-6 mt alternate">
                                <div class="input-field">
                                    {{ form_label(form.checkOutDate, 'Wymeldowanie') }}
                                    {{ form_errors(form.checkOutDate) }}
                                    {{ form_widget(form.checkOutDate) }}
                                    <i class="icon">
                                        <svg width="20" height="20" viewBox="0 0 16 16" class="bi bi-calendar3-range icon-calendar" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"/>
                                            <path fill-rule="evenodd" d="M7 10a1 1 0 0 0 0-2H1v2h6zm2-3a1 1 0 0 1 0-2h6v2H9z"/>
                                        </svg>
                                    </i>
                                </div>
                            </div>
                            <div class="col-xxs-12 col-xs-6 mt alternate">
                                <div class="input-field">
                                    {{ form_errors(form.guests) }}
                                    <i class="icon icon-guests">
                                        <svg width="20" height="20" viewBox="0 0 16 16" class="bi bi-person-lines-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7 1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm2 9a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z"/>
                                        </svg>
                                    </i>
                                    {{ form_widget(form.guests) }}
                                </div>
                            </div>
                            <div class="col-xs-12">
                                {{ form_widget(form.submit, {label: 'Sprawdź dostępność'}) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="desc2-homepage">
            <div class="col-sm-push-1 col-md-push-1 text-header">
                {% if widgetText is defined %}
                    <h1>{{ widgetHeader }}</h1>
                    <span>{{ widgetText }}</span>
                {% else %}
                    <h1>{{ content.homepageHeader|raw }}</h1>
                    <p>{{ content.homepageHeaderText|raw }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

