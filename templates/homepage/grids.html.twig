<div id="res-tours" class="res-section-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center heading-section">
                <h2>Najczęściej wynajmowane</h2>
            </div>
        </div>
        {% if rooms is defined and rooms is not empty %}
            {% for room in rooms %}
                <div class="col-md-4 col-sm-6 res-tours">
                    <div href="#">
                        {% if media[room.id].media[0] is defined %}
                            <img loading="lazy" src="{{ media[room.id].media[0].media.formats['sulu-400x400-inset.webp'] }}" height="300px"  alt="{{ room.name }}">
                        {% else %}
                            <img loading="lazy" src="web/images/place-1.jpg" height="300px" alt="{{ room.name }}" class="img-responsive">
                        {% endif %}
                        <div class="desc">
                            <h3>{{ room.name }}</h3>
                            <span class="price">od {{ room.basePrice }}zł</span>
                            <a class="btn btn-primary btn-outline" href="{{ path('room_show', {slug: room.slug}) }}">Zobacz
                                <svg class="bi bi-chevron-right icon" width="24" height="24" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M6.646 3.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L12.293 10 6.646 4.354a.5.5 0 010-.708z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col-md-12 text-center">
                <p><a class="btn btn-primary btn-outline btn-lg" href="{{ path('rooms_show') }}">Zobacz wszystkie</a></p>
            </div>
        {% endif %}
    </div>
</div>

<div id="res-features home">
    <div class="container homepage-content">
        <p>{{ content.article|raw }}</p>
    </div>
</div>
