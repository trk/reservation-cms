<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-179705432-1"></script>
    <script>function gtag(){dataLayer.push(arguments)}window.dataLayer=window.dataLayer||[],gtag("js",new Date),gtag("config","UA-179705432-1");</script>

    {% if content.title is not defined %}
    <title>{% block title '' %}</title>
    {% endif %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('core', null, 'css') }}
    {% endblock %}
    {% block styles '' %}

    {% block meta %}
        {% include "@SuluWebsite/Extension/seo.html.twig" with {
            "seo": extension.seo|default([]),
            "content": content|default([]),
            "urls": urls|default([]),
            "shadowBaseLocale": shadowBaseLocale|default(),
            "defaultLocale": app.request.locale
        } %}
    {% endblock %}

    {% block style %}{% endblock %}
</head>
<body>

<div id="res-wrapper">
    <div id="res-page">

        <header>
            {% block header %}
                {% include "header.html.twig" %}
            {% endblock %}
        </header>

        {#    <form action="{{ path('sulu_search.website_search') }}" method="GET">#}
        {#        <input name="q" type="text" placeholder="Search"/>#}
        {#        <input type="submit" value="Go"/>#}
        {#    </form>#}

        {% block body '' %}

        {% block form '' %}

        <section class="main_bg" id="content">
            {% block content %}{% endblock %}
        </section>

        <footer>
            {% block footer %}
                {% include "footer.html.twig" %}
            {% endblock %}
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('main', null, 'js') }}
            {{ encore_entry_script_tags('cookieconsent', null, 'js') }}
            {{ encore_entry_script_tags('cookie-info', null, 'js') }}
        {% endblock %}
        {% block js '' %}

    </div>
</div>
</body>
</html>
